{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": ["dom", "esnext"],
        "incremental": true,
        "allowJs": false,
        "checkJs": false,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "jsx": "preserve",
        "allowSyntheticDefaultImports": true,

        /* Module Resolution */
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,

        /* Type Checking */
        "typeRoots": ["./node_modules/@types"]
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
